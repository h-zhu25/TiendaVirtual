@model IEnumerable<TiendaVirtual.Models.Pedido>

@{
    ViewBag.Title = "Lista de Pedidos";
}

<h2>Lista de Pedidos</h2>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Fecha</th>
            <th>Usuario</th>
            <th>Total</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var pedido in Model)
        {
            <tr>
                <td>@pedido.PedidoId</td>
                <td>@pedido.Fecha</td>
                <td>@pedido.Usuario</td>
                <td>@pedido.Total</td>
                <td>
                    @Html.ActionLink("Ver Detalles", "Details", new { id = pedido.PedidoId }, new { @class = "btn btn-info" })
                </td>
            </tr>
        }
    </tbody>
</table>
